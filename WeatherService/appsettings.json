{
  "ConnectionStrings": {
    //"Server=(localdb)\\mssqllocaldb;Database=aspnet-WeatherService-53bc9b9d-9d6a-45d4-8429-2a2761773502;Trusted_Connection=True;MultipleActiveResultSets=true",
    "DefaultConnection": "Data Source=.\\;Initial Catalog=weather_local;Integrated Security=True;MultipleActiveResultSets=true;Connection Timeout=360;TrustServerCertificate=True;"
    // Data Source → é a forma de autenticação na base de dados
    // Initial Catalog → é o nome da base de dados
    // Integrated Security → é onde se colocaria uo username e password para aceder à base de dados
    // MultipleActiveResultSets → é da forma como podemos escrever e enviar várias consultas para a base de dados
    // Connection Timeout → se o sistema não estiver a responder, vai matar a sessão após o tempo definido aqui
    // TrustServerCertificate → Mecanismos de segurança para aceitar o certificado que a máquina local cria para aceder à base de dados
  },
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
